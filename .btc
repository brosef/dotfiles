# My GDAX CLI app
alias btc="python3 ~/Projects/gdax-cli/price.py"
alias gdax="python3 ~/Projects/gdax-cli/ticker.py"

# Electrum
alias e="electrum -w ~/.electrum/wallets/default_watch"
alias ebal="electrum -w ~/.electrum/wallets/default_watch getbalance | awk 'NR==2 {print \$2}' | cut -c 2-11"
alias eaddr="electrum -w ~/.electrum/wallets/default_watch getunusedaddress"

# Vanitygen
alias vanity="vanitygen -v -t 1 -o ~/Documents/.btc/vanity.txt"
alias vanityx2="vanitygen -v -t 2 -o ~/Documents/.btc/vanity.txt"
alias lotto="vanitygen -v -t 2 -o ~/Documents/.btc/lotto.txt 167ZWTT8n6s4ya8cGjqNNQjDwDG"

# Poloniex lending
alias lend="python3 ~/Applications/poloniexlendingbot/lendingbot.py"
alias lendconfig="nano ~/Applications/poloniexlendingbot/default.cfg"