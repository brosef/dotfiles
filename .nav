#!/usr/bin/env bash

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias c="clear"

# Shortcuts
alias t="cd /"
alias h="cd ~"
alias b="cd -"
alias p="cd ~/projects"
alias d="cd ~/dotfiles"
alias a="cd ~/applications"
alias v="cd /volumes"
alias e="vim"
alias s="subl"

# ls
alias l="ls"
alias la="ls -A"
alias ll="ls -AFlo"

function cs() {
	dir=$*
	cd $dir && ls
}
