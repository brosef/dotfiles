#!/usr/bin/env bash

# Uses vi/vim keybindings in the terminal
set -o vi

# Binds 'jk' and 'kj' to exit insert mode and enter normal mode 
# for vi movement in the terminal
bind '"jk":"\e"'
bind '"kj":"\e"'

# Ignores all one-word and two-word commands for more efficient
# bash history searching
export HISTIGNORE=?:??

# ls colors
export CLICOLOR=1
export LSCOLORS=exgxbxbxCxfxfxCaCaeaea

export EDITOR='vim'
export MANWIDTH=65
export GPG_TTY=$(tty)
