#!/usr/bin/env bash

# Super quick note
function n ()
{
  title=$(date +%Y-%m-%d)
  note=$*
  echo $(date): $note >> ~/Desktop/Note_${title}.txt
}

# Check price of individual cryptocurrency
#
# Dependency: jq (brew install jq)
#
# Usage: `cq btc` (use ticker symbol; case-insensitive)
# Output: BTC: $8999.99

function coin ()
{
  local SYMBOL=${1^^}
  local TICKER=$(curl -s "https://min-api.cryptocompare.com/data/pricemultifull?fsyms=${SYMBOL}&tsyms=USD")
  local PRICE=$(echo ${TICKER} | printf "%.2f\n" $(jq -cr '.RAW.'${SYMBOL}'.USD.PRICE'))
  echo "${SYMBOL}: \$"${PRICE}
}

# (n)eo(f)etch(g)rep
# Usage: `nfg shell`
# Output: Shell: /usr/local/bin/bash 4.4.23

function nfg ()
{
  local QUERY=$1

  if [[ ${QUERY} ]]; then
    neofetch --config ~/dotfiles/bash/neofetch-all.conf \
    | grep -i ${QUERY}
  else
    printf "\\033[31mERROR:\\033[0m No pattern supplied\\n"
    return 1
  fi
}
